<resources>
    <!-- ======================== 默认sp ======================== -->
    <!-- 超大号文字 -->
    <dimen name="fontXLarge">@dimen/txt48</dimen>
    <!-- 标题、高Btn -->
    <dimen name="fontLarge">@dimen/txt36</dimen>
    <!-- 正常文字 -->
    <dimen name="fontNormal">@dimen/txt32</dimen>
    <!-- 描叙文字等 -->
    <dimen name="fontSmall">@dimen/txt24</dimen>

    <!-- ======================== 默认dp ======================== -->
    <!-- 线条、空隙尽量保持2dp宽，卡片圆角半径2dp。特殊情况相应调整。 -->
    <!-- 栅格系统的最小单位是8dp，一切距离、尺寸都应该是8dp的整数倍。 -->
    <!-- 顶部状态栏高度：24dp；Appbar最小高度：48dp；底部导航栏高度：48dp；悬浮按钮尺寸：56x56dp/40x40dp；用户头像尺寸：64x64dp/40x40dp；
    小图标点击区域：48x48dp；侧边抽屉到屏幕右边的距离：56dp；卡片间距：8dp；分隔线上下留白：8dp；
    大多元素的留白距离：16dp；屏幕左右对齐基线：16dp；文字左侧对齐基线：72dp； -->

    <dimen name="title_height">48dp</dimen>
    <!-- ToolBar -->
    <dimen name="toolBar_height">@dimen/title_height</dimen>
    <dimen name="toolBar_ab_w">@dimen/title_height</dimen>
    <dimen name="toolBar_abo_w">@dimen/title_height</dimen>
    <!-- 背景圆角度 -->
    <dimen name="def_radius">5dp</dimen>
    <!-- 阴影范围 -->
    <dimen name="def_elevation">4dp</dimen>
    <!-- 分割线 -->
    <dimen name="def_view_line">0.6dp</dimen>
    <dimen name="def_view_line_margin">16dp</dimen>
    <!-- 默认按钮 -->
    <dimen name="def_btn_height">48dp</dimen>
    <dimen name="def_btn_marginLeft">16dp</dimen>
    <dimen name="def_btn_marginRight">16dp</dimen>
    <dimen name="def_btn_top_margin">32dp</dimen>
    <dimen name="def_btn_w_padding">16dp</dimen>
    <!-- 默认输入框 -->
    <dimen name="def_edit_height">48dp</dimen>
    <dimen name="def_edit_paddingLeft">16dp</dimen>
    <dimen name="def_edit_paddingRight">16dp</dimen>
    <!-- 默认文本 -->
    <dimen name="def_txt_padding">8dp</dimen>
    <dimen name="def_txt_drawPadding">4dp</dimen>
    <dimen name="def_txt_link">1dp</dimen>
    <!-- 默认item -->
    <dimen name="def_item_height">48dp</dimen>

    <!-- ======================== 分模块_控件名/功能名_位子 ======================== -->
    <!-- 自定义Dialog部分 -->
    <dimen name="dialog_width">264dp</dimen>
    <dimen name="dialog_height">96dp</dimen>
</resources>
