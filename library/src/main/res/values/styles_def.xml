<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ======================== def ======================== -->
    <!-- 线条 -->
    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/def_view_line</item>
        <item name="android:background">@color/def_view_line</item>
    </style>
    <style name="line_mg" parent="line">
        <item name="android:layout_marginLeft">@dimen/def_view_line_margin</item>
        <item name="android:layout_marginRight">@dimen/def_view_line_margin</item>
    </style>
    <style name="line_h" parent="line">
        <item name="android:layout_width">@dimen/def_view_line</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- 默认TextView -->
    <style name="def_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fontNormal</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/def_txt_normal</item>
        <item name="android:textColorHint">@color/def_txt_hint</item>
    </style>
    <!-- 默认提交按钮样式 -->
    <style name="def_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/def_btn_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/def_btn_padding</item>
        <item name="android:paddingRight">@dimen/def_btn_padding</item>
        <item name="android:textSize">@dimen/fontNormal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/def_btn_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/def_btn_marginRight</item>
        <item name="android:textColor">@color/select_btn_txt</item>
    </style>
    <!-- 默认EditText -->
    <style name="def_et">
        <item name="android:layout_height">@dimen/def_edit_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingRight">@dimen/def_edit_paddingRight</item>
        <item name="android:paddingLeft">@dimen/def_edit_paddingLeft</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@color/trans</item>
        <item name="android:textColor">@color/def_font_22</item>
        <item name="android:textColorHint">@color/def_txt_hint</item>
        <item name="android:textSize">@dimen/fontNormal</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- 默认item -->
    <style name="def_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/def_item_height</item>
        <item name="android:background">@drawable/select_def_item</item>
    </style>
    <!-- 默认item -->
    <style name="def_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@null</item>
    </style>
    <!-- weight -->
    <style name="weight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>